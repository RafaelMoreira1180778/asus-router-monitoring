# =============================================================================
# ASUS Router Monitoring Stack Configuration
# =============================================================================
# Copy this file to .env and modify the values for your setup

# -----------------------------------------------------------------------------
# Router Connection Settings
# -----------------------------------------------------------------------------
ASUS_HOSTNAME=192.168.1.1
ASUS_USERNAME=admin
ASUS_PASSWORD=your_router_password_here
ASUS_USE_SSL=false

# Connection Resilience Settings (v1.19.0+)
# Enable automatic fallback for connection failures
ASUS_ALLOW_FALLBACK=true
# Use strict SSL certificate verification
ASUS_STRICT_SSL=false
# Allow HTTP to HTTPS upgrade attempts
ASUS_ALLOW_UPGRADE_HTTP_TO_HTTPS=true

# -----------------------------------------------------------------------------
# Exporter Settings
# -----------------------------------------------------------------------------
EXPORTER_PORT=8000
EXPORTER_LOG_LEVEL=INFO
# Collection interval in seconds
EXPORTER_COLLECTION_INTERVAL=15

# -----------------------------------------------------------------------------
# Prometheus Settings
# -----------------------------------------------------------------------------
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION_TIME=15d
PROMETHEUS_SCRAPE_INTERVAL=30s

# -----------------------------------------------------------------------------
# Grafana Settings
# -----------------------------------------------------------------------------
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
# Change this for production!
GRAFANA_SECRET_KEY=SW2YcwTIb9zpOOhoPsMm

# -----------------------------------------------------------------------------
# Docker Settings
# -----------------------------------------------------------------------------
# Set to your timezone
TZ=UTC

# Network name for the monitoring stack
COMPOSE_PROJECT_NAME=asus-monitor
